---
// Intro.astro
---

<section class="intro intro-first">
  <div class="wrapper">
    <div class="container">
      <h3 class="title">
        <span class="asterisk">*</span>Hot Lava is our phrase for epiphany. We had one and that’s why we’re here...
      </h3> 
    </div>
    <div class="image-phrase">
      <img src="/images/phrase.jpg" alt="Hot Lava is our phrase for epiphany.">
    </div>
  </div>
</section>
<section class="intro intro-second">
  <div class="wrapper"> 
    <div class="container">
      <h3 class="title">
        <span class="asterisk">*</span>
        Ideas need to
        <br />flow more freely.
      </h3>
      <div class="row">
        <div class="image-ideas">
          <img src="/images/flow.jpg" alt="Ideas need to flow more freely.">
        </div> 
        <p class="paragraph paragraph-intro"> It’s never been more important. With the complexities of today’s marketing challenges, ideas need to flow freely to be effective across audiences, platforms and cultures.
        </p>
      </div>
    </div>
  </div>
</section>
<section class="intro intro-third">
  <div class="wrapper"> 
    <div class="container">
      <h3 class="title">
        <span class="asterisk">*</span>Flow starts with
        <br />the way we work.
      </h3>
      <p class="paragraph">We're a full-service advertising agency that gives
        clients direct access to award-winning creators and doers. Our team is
        simply an extension of yours – with personal service, an agile approach,
        and effective, defining work.
      </p>
    </div> 
  </div>
</section>

<script>
  import { initSplitText } from '../../scripts/utils/splittext.js';
  import { waitForFonts } from '../../scripts/utils/fonts-ready.js';
  import { initParallax } from '../../scripts/utils/parallax.js';
  import { initUkiyo } from '../../scripts/utils/ukiyo.js';

  // Wait for fonts to be ready before initializing SplitText
  waitForFonts(() => {
    // Initialize SplitText for all titles in Intro sections (words)
    const titles = document.querySelectorAll('.intro h3.title');
    titles.forEach((title) => {
      initSplitText(title as HTMLElement, { type: 'words' });
    });

    // Initialize SplitText for all paragraphs in Intro sections (lines)
    const paragraphs = document.querySelectorAll('.intro .paragraph');
    paragraphs.forEach((paragraph) => {
      initSplitText(paragraph as HTMLElement, { type: 'lines' });
    });
  });
 
  initParallax('.intro-first h3.title', {
    speed: 1  
  });

  initParallax('.intro-second h3.title', {
    speed: 0.75  
  });

  initParallax('.intro-second .paragraph-intro', {
    speed: 0.75  
  });
  
  initParallax('.intro-third h3.title', {
    speed: 0.75  
  });

  initParallax('.intro-third .paragraph', {
    speed: 0.75  
  });

  initUkiyo('.intro-first .image-phrase img', {
    scale: 1.25,
    speed: 1
  });

  initUkiyo('.intro-second .image-ideas img', {
    scale: 1.25,
    speed: 1
  });
</script>